<%- include("../partials/header") %>
<%- include("../partials/navbar") %>

<link rel="stylesheet" href="/css/star.css">

<div class="container mt-5">

    <%- include("../partials/flash") %>

    <h6 class="display-6">Cart</h6>

    <div class="row">
    <div class="col-lg-8">
            <% for(let item of userCart) { %>
                <div class="card mb-3" style="max-width: 90%;">
                    <div class="row g-0">
                        <div class="col-md-4">
                            <img style="height: 200px;width: 200px;" class="mt-3" src="<%= item.img %>" alt="...">
                        </div>
                        <div class="col-md-8">
                            <div class="card-body">
                                <h5 class="card-title">
                                    <%= item.name %>
                                </h5>
                                <p class="card-text">This is a wider card with supporting text below as a natural lead-in to additional
                                    content. This content is a little bit longer.</p>
                                <form action="/user/<%= currentUser._id %>/cart/<%= item._id %>?_method=DELETE" method="POST">
                                    <button class="btn btn-small btn-danger">remove</button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            <% } %>
        </div>
        <div class="col-lg-4">
            <h6 class="display-6">Products</h6>
            <ul class="list-group">
                <% totalAmount=0 %>
                <% for(let item of userCart) { %>
                    <li class="list-group-item"><%= item.name %> - <strong>&#8377; <%= item.price %></strong></li>
                    <% totalAmount += item.price %>
                <% } %>
                <div class="mt-2">
                    <p class="fw-bold">Total Amount: &#8377;<%= totalAmount %></p>
                    <a href="/cart/payment" class="btn btn-success">Proceed To Pay</a>
                </div>
            </ul>
        </div>
    </div>

</div>

<%- include("../partials/footer") %>